{% extends '::base.html.twig' %}

{% block body %}
    {% for filter in filters %}
        <h2><a href="{{ path('filter_run', { id: filter.id } ) }}">{{ filter.name }}</a></h2>
        With meta:
        <ul>
            {% for meta in filter.meta %}
                <li>{{ meta.description }}</li>
            {% endfor %}
        </ul>
        With tag:
        <ul>
            {% for tag in filter.tags %}
                <li>{{ tag.name }}</li>
            {% endfor %}
        </ul>
    {% endfor %}
{% endblock %}